@model BattalgaziSosyalYardim.Models.ApplicationCreateViewModel

@{
    Layout = "~/Views/Shared/_Bootstrap5Layout.cshtml";
    ViewData["Title"] = "Başvuru Formu";
}

@section Styles {
    <style>
        body {
            background: url('/thema/img/belediye.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .background-overlay {
            position: fixed;
            inset: 0;
            width: 100%;
            height: 100%;
            filter: brightness(0.7);
            z-index: -1;
        }

        .custom-card {
            background-color: rgba(255,255,255,0.95);
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }

        .form-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            border-bottom: 1px solid #ddd;
        }

            .form-header img {
                height: 60px;
            }

            .form-header h2 {
                flex-grow: 1;
                text-align: center;
                margin: 0;
                font-size: 1.5rem;
                font-weight: bold;
                color: #333;
            }

        .admin-login {
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1000;
            background-color: azure;
            color: black;
        }

        .req::after {
            content: " *";
            color: #d00;
            font-weight: 700;
        }
    </style>
}

<a href="/Login/Login" class="btn btn-outline-light admin-login" title="Yönetici Girişi">👤 Yönetici Girişi</a>
<div class="background-overlay"></div>

<div class="container mt-5 mb-5">
    <div class="card custom-card">
        <div class="form-header">
            <img src="/thema/img/logo.png" alt="Logo" />
            <h2>0-2 YAŞ BEBEK BEZİ DESTEĞİ BAŞVURU FORMU</h2>
            <img src="/thema/img/aile.jpg" alt="Bebek" style="width:90px;" />
        </div>

        <div class="card-body p-4">
            <!-- Özet hata alanı (Sunucu tarafı doğrulama) -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- İsteğe bağlı genel uyarı alanı (İstemci tarafı) -->
            <div id="formClientSummary" class="alert alert-danger d-none" role="alert"></div>

            <form asp-action="Create" asp-controller="Talep" method="post" id="basvuruForm" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3 row">
                    <label class="col-md-4 col-form-label fw-semibold req" asp-for="MotherNationalId"></label>
                    <div class="col-md-8">
                        <input class="form-control"
                               asp-for="MotherNationalId"
                               inputmode="numeric"
                               maxlength="11"
                               aria-describedby="MotherNationalIdFeedback" />
                        <span id="MotherNationalIdFeedback" class="text-danger" asp-validation-for="MotherNationalId"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-md-4 col-form-label fw-semibold req" asp-for="MotherBirthDate"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="MotherBirthDate" type="date" aria-describedby="MotherBirthDateFeedback" />
                        <span id="MotherBirthDateFeedback" class="text-danger" asp-validation-for="MotherBirthDate"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-md-4 col-form-label fw-semibold req" asp-for="MotherFullName"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="MotherFullName" maxlength="100" aria-describedby="MotherFullNameFeedback" />
                        <span id="MotherFullNameFeedback" class="text-danger" asp-validation-for="MotherFullName"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-md-4 col-form-label fw-semibold req" asp-for="PhoneNumber"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="PhoneNumber" inputmode="tel" maxlength="11" aria-describedby="PhoneNumberFeedback" />
                        <span id="PhoneNumberFeedback" class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-md-4 col-form-label fw-semibold req" asp-for="BabyNationalId"></label>
                    <div class="col-md-8">
                        <input class="form-control"
                               asp-for="BabyNationalId"
                               inputmode="numeric"
                               maxlength="11"
                               aria-describedby="BabyNationalIdFeedback" />
                        <span id="BabyNationalIdFeedback" class="text-danger" asp-validation-for="BabyNationalId"></span>
                    </div>
                </div>

                @* Program sabit *@
                <input type="hidden" asp-for="ProgramCode" />
                <input type="hidden" asp-for="ProgramTitle" />

                <div class="text-center">
                    <button type="submit" id="submitBtn" class="btn btn-success">📤 Başvuru Yap</button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center text-muted small">
            <strong>Battalgazi Belediyesi Bilgi İşlem Müdürlüğü</strong>
        </div>
    </div>
</div>

<!-- Açılışta görünen bilgilendirme modalı -->
<div class="modal fade" id="basvuruModal" tabindex="-1" aria-labelledby="basvuruModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Battalgazi Belediyesi Bebek Bezi Desteği</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" style="white-space: pre-line;">
                <strong>Müdürlük:</strong> SOSYAL YARDIM İŞLERİ ŞUBE MÜDÜRLÜĞÜ
                <strong>Projenin amacı:</strong> 2025 “Aile yılı” kapsamında bebek bezi desteği
                <strong>Proje başlangıcı:</strong> 01.06.2025
                <strong>Proje bitimi:</strong> 31.12.2025
                • TÜRKİYE CUMHURİYETİ vatandaşı olmak
                • Battalgazi ilçe sınırlarında ikamet ediyor olması
                • Bez desteği alacak çocukların 0 ile 24 ay arasında olması
                • Ailenin dar gelirli olması (dar gelirli: iki asgari ücretin altında olması gerekmektedir.)
                • Sosyal uyum yardımı alamayan aileler başvurabilir
                • Eksik ve sahte olduğu tespit edilen başvurular kabul edilmeyecektir
                • Başvurular bebeğin annesi üzerinden online olarak yapılacaktır

                <p style="color:red; font-weight:bold; text-align:center; font-size:1.2rem;">
                    NOT: BAŞVURULAR SADECE ONLINE SİSTEM ÜZERİNDEN KABUL EDİLMEKTEDİR.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ---- Yardımcılar ----
        function onlyDigits(str) { return (str || "").replace(/\D+/g, ""); }

        // Türkiye TCKN algoritması (11 hane, kontrol basamakları)
        function isValidTckn(v) {
            if (!/^[1-9]\d{10}$/.test(v)) return false;
            const d = v.split("").map(Number);
            const oddSum  = d[0] + d[2] + d[4] + d[6] + d[8];
            const evenSum = d[1] + d[3] + d[5] + d[7];
            const digit10 = ((oddSum * 7) - evenSum) % 10;
            if (digit10 !== d[9]) return false;
            const digit11 = (d.slice(0,10).reduce((a, b) => a + b, 0)) % 10;
            return digit11 === d[10];
        }

        document.addEventListener("DOMContentLoaded", function () {
            // Modal: her açılışta göster
            const modalEl = document.getElementById('basvuruModal');
            const modal = new bootstrap.Modal(modalEl, { backdrop: 'static' });
            modal.show();

            // Doğum tarihi: bugünden ileri olamaz
            const d = document.getElementById("MotherBirthDate");
            if (d) {
                const today = new Date().toISOString().slice(0,10);
                d.setAttribute("max", today);
            }

            // Numerik alanlar (TCKN) yalnızca rakam
            ["MotherNationalId", "BabyNationalId"].forEach(id => {
                const el = document.getElementById(id);
                if (!el) return;
                el.addEventListener("input", () => {
                    el.value = onlyDigits(el.value).slice(0,11);
                });
            });

            // Telefon: 11 hane (05xxxxxxxxx)
            const tel = document.getElementById("PhoneNumber");
            if (tel) {
                tel.addEventListener("input", () => {
                    tel.value = onlyDigits(tel.value).slice(0,11);
                });
            }

            // İstemci tarafı ek kontroller (HTML5 + özel)
            const form = document.getElementById("basvuruForm");
            const summary = document.getElementById("formClientSummary");

            form.addEventListener("submit", function (e) {
                // Önce önceki görsel işaretlemeleri temizle
                const controls = form.querySelectorAll(".form-control");
                controls.forEach(c => c.classList.remove("is-invalid"));
                summary.classList.add("d-none");
                summary.innerHTML = "";

                let errors = [];

                // Zorunlu alan boş mu?
                const requiredIds = ["MotherNationalId","MotherBirthDate","MotherFullName","PhoneNumber","BabyNationalId"];
                requiredIds.forEach(id => {
                    const el = document.getElementById(id);
                    if (!el || !el.value.trim()) {
                        el?.classList.add("is-invalid");
                        errors.push(`${id} zorunludur.`);
                    }
                });

                // TCKN format + algoritma
                const anne = document.getElementById("MotherNationalId")?.value.trim() || "";
                if (anne && (!/^[1-9]\d{10}$/.test(anne) || !isValidTckn(anne))) {
                    document.getElementById("MotherNationalId")?.classList.add("is-invalid");
                    errors.push("Anne T.C. Kimlik No geçersiz.");
                }

                const bebek = document.getElementById("BabyNationalId")?.value.trim() || "";
                if (bebek && (!/^[1-9]\d{10}$/.test(bebek) || !isValidTckn(bebek))) {
                    document.getElementById("BabyNationalId")?.classList.add("is-invalid");
                    errors.push("Bebek T.C. Kimlik No geçersiz.");
                }

                // Telefon (05xxxxxxxxx)
                const phone = document.getElementById("PhoneNumber")?.value.trim() || "";
                if (phone && !/^0?5\d{9}$/.test(phone)) {
                    document.getElementById("PhoneNumber")?.classList.add("is-invalid");
                    errors.push("Telefon 05XXXXXXXXX formatında olmalıdır.");
                }

                // Doğum tarihi kontrolü (gelecek tarih olamaz)
                const dob = document.getElementById("MotherBirthDate")?.value;
                if (dob) {
                    const today = new Date().toISOString().slice(0,10);
                    if (dob > today) {
                        document.getElementById("MotherBirthDate")?.classList.add("is-invalid");
                        errors.push("Anne doğum tarihi bugünden ileri olamaz.");
                    }
                }

                // Hata varsa gönderimi engelle ve özet göster
                if (errors.length > 0) {
                    e.preventDefault();
                    summary.classList.remove("d-none");
                    summary.innerHTML = "Lütfen formu kontrol ediniz:<ul class='mb-0'>" +
                        errors.map(x => `<li>${x}</li>`).join("") + "</ul>";
                    const firstInvalid = form.querySelector(".is-invalid");
                    firstInvalid?.focus();
                }
                // Hata yoksa: e.preventDefault() YOK → form sunucuya POST edilir.
            });
        });
    </script>
}
