@* Minimal ortak şablon: head + RenderBody *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BattalgaziSosyalYardim</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome -->
    <link href="/thema/plugins/fontawesome-free/css/all.css" rel="stylesheet" />

    <!-- AdminLTE core -->
    <link rel="stylesheet" href="/thema/dist/css/adminlte.min.css" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Proje stilleri (varsa) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BattalgaziSosyalYardim.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @RenderBody()

    <!-- jQuery (AdminLTE için gerekli) -->
    <script src="/thema/plugins/jquery/jquery.min.js"></script>

    <!-- AdminLTE App -->
    <script src="/thema/dist/js/adminlte.min.js"></script>

    <!-- Bootstrap 5 JS (bundle: popper.js dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
