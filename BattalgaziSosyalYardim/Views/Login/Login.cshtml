@model BattalgaziSosyalYardim.Models.LoginViewModel
@{
    Layout = "_Bootstrap5Layout";
    ViewData["Title"] = "Yönetici Girişi";
    var returnUrl = (string?)ViewData["ReturnUrl"] ?? "/Admin";
}

@section Styles {
    <!-- Rubik font (isteğe bağlı) -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons (ikonlu input-group için) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Arka plan ve overlay */
        body {
            background: url('/thema/img/belediye.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Rubik', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                inset: 0;
                background: rgba(0,0,0,.28); /* okunurluk için koyu cam */
                pointer-events: none;
                z-index: 0;
            }

        .login-wrap {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 32px 16px;
            position: relative;
            z-index: 1; /* overlay üstünde kalsın */
        }

        /* Cam (glassmorphism) kart */
        .login-card {
            width: 100%;
            max-width: 560px;
            border-radius: 24px;
            background: rgba(255,255,255,.55);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,.45);
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,.18);
        }

        .login-header {
            background: rgba(235,238,239,.7);
            padding: 20px 16px;
            text-align: center;
        }

            .login-header img {
                max-height: 70px;
            }

        .login-title {
            margin: 18px 0 12px 0;
            text-align: center;
            color: #0b3c5d;
            font-weight: 700;
            font-size: 1.25rem;
            letter-spacing: .2px;
        }

        label.form-label {
            font-weight: 400;
            color: #1b2b3a;
            margin-bottom: .35rem;
        }

        /* İkonlu büyük inputlar */
        .input-group-lg > .form-control,
        .input-group-lg > .input-group-text {
            border-radius: 16px;
            padding-top: .9rem;
            padding-bottom: .9rem;
        }

        .input-group-text {
            background: rgba(255,255,255,.75);
            border: 1px solid rgba(0,0,0,.06);
        }

        .form-control {
            background: #f1f5f9;
            border: 1px solid #d7dde3;
        }

            .form-control:focus {
                background: #f7fafc;
                border-color: #94b8c9;
                box-shadow: 0 0 0 .2rem rgba(15,76,117,.12);
            }

        /* Yuvarlak, hafif saydam buton */
        .btn-login {
            border-radius: 999px;
            background: rgba(13,71,107,.9);
            border: 0;
            color: #fff;
            font-weight: 600;
            padding: 12px 18px;
            box-shadow: 0 8px 20px rgba(13,71,107,.25);
            transition: transform .08s ease, box-shadow .2s ease, background .2s ease;
        }

            .btn-login:hover {
                background: rgba(13,71,107,1);
                box-shadow: 0 12px 28px rgba(13,71,107,.35);
                transform: translateY(-1px);
            }

            .btn-login:active {
                transform: translateY(0);
            }

        .text-danger.small {
            margin-top: .25rem;
            display: block;
        }

        @@media (max-width: 576px) {
            .login-card

        {
            border-radius: 16px;
        }

        .login-header img {
            max-height: 56px;
        }

        }
    </style>
}

<div class="login-wrap">
    <div class="login-card">
        <div class="login-header">
            <img src="/thema/img/logo.png" alt="Battalgazi Belediyesi">
        </div>

        <div class="p-4 p-md-4">
            <div class="login-title">YÖNETİCİ GİRİŞİ</div>

            <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <!-- T.C. Kimlik -->
                <div class="mb-3">
                    <label asp-for="NationalId" class="form-label">T.C. Kimlik Numaranızı giriniz:</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text">
                            <i class="bi bi-person-vcard"></i>
                        </span>
                        <input asp-for="NationalId"
                               class="form-control"
                               placeholder="T.C. Kimlik No"
                               inputmode="numeric" maxlength="11" autocomplete="off" />
                    </div>
                    <span asp-validation-for="NationalId" class="text-danger small"></span>
                </div>

                <!-- Şifre -->
                <div class="mb-2">
                    <label asp-for="Password" class="form-label">Şifrenizi giriniz:</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Password"
                               type="password"
                               id="pwd"
                               class="form-control"
                               placeholder="Şifre"
                               autocomplete="current-password" />
                        <button type="button" class="input-group-text" id="togglePwd" aria-label="Şifreyi göster/gizle">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <div id="capsWarn" class="form-text text-warning d-none">Caps Lock açık olabilir.</div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- (İsteğe bağlı) özet hata alanı -->
                @* <div class="text-danger small mb-2">@Html.ValidationSummary(false)</div> *@

                <button type="submit" class="btn btn-login w-100 mt-2">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // TCKN: sadece rakam ve 11 hane
        document.addEventListener("input", function (e) {
            if (e.target.name === "NationalId") {
                e.target.value = (e.target.value || "").replace(/\D+/g, "").slice(0, 11);
            }
        });

        // Şifre göster/gizle
        const pwd = document.getElementById('pwd');
        const toggle = document.getElementById('togglePwd');
        const caps = document.getElementById('capsWarn');

        if (toggle && pwd) {
            toggle.addEventListener('click', () => {
                const t = pwd.type === 'password' ? 'text' : 'password';
                pwd.type = t;
                const icon = toggle.querySelector('i');
                if (icon) icon.className = t === 'password' ? 'bi bi-eye' : 'bi bi-eye-slash';
            });

            // Caps Lock uyarısı
            pwd.addEventListener('keyup', (e) => {
                if (e.getModifierState && e.getModifierState('CapsLock')) {
                    caps?.classList.remove('d-none');
                } else {
                    caps?.classList.add('d-none');
                }
            });
        }
    </script>
}
